<input type="hidden" name="photoBase64" id="photoBase64" required>
                    <button class="btn btn-success w-100">Submit Profile</button>
                </form>
            </div>
        </div>
    </div>
    <% } %>

    <!-- ================= DASHBOARD ================= -->
