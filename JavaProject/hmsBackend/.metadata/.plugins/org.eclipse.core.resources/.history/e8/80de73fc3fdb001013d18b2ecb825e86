<script>
function updateOptions(stream){
    let role = document.getElementById('roleSelect');
    role.innerHTML = '<option value="">-- Select Role --</option>';

    if(stream === 'Medical'){
        ['Surgeon','Paramedic','Lab Technician','Nurse','Ward Boy','Dresser','Compounder']
        .forEach(r => role.innerHTML += `<option>${r}</option>`);
    }
    if(stream === 'Hospital Management'){
        ['MD','Supervisor','Apparatus-Technician','Medical Store Incharge']
        .forEach(r => role.innerHTML += `<option>${r}</option>`);
    }
}
</script>

