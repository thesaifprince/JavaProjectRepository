                    <%
                        String search = request.getParameter("search");

                        Class.forName("com.mysql.cj.jdbc.Driver");
                        Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/hms", "root", "root");

                        PreparedStatement ps;

                        if(search != null && !search.trim().isEmpty()){
                            ps = con.prepareStatement(
                                "SELECT * FROM billing WHERE patient_name LIKE ? OR doctor_name LIKE ? OR bill_id LIKE ? ORDER BY bill_id DESC"
                            );
                            ps.setString(1, "%" + search + "%");
                            ps.setString(2, "%" + search + "%");
                            ps.setString(3, "%" + search + "%");
                        } else {
                            ps = con.prepareStatement("SELECT * FROM billing ORDER BY bill_id DESC");
                        }

                        ResultSet rs = ps.executeQuery();

                        boolean empty = true;

                        while(rs.next()){
                            empty = false;
                    %>

                    <tr>
                        <td><strong>#<%= rs.getInt("bill_id") %></strong></td>
                        <td><%= rs.getString("patient_name") %></td>
                        <td><%= rs.getString("doctor_name") %></td>
                        <td><%= rs.getDate("appointment_date") %></td>

                        <td>Rs. <%= rs.getDouble("consultation_fee") %></td>
                        <td>Rs. <%= rs.getDouble("medicine_charges") %></td>
                        <td>Rs. <%= rs.getDouble("room_charges") %></td>

                        <td class="fw-bold text-success">
                            Rs. <%= rs.getDouble("total_amount") %>
                        </td>

                        <td>
                            <a href="editBill.jsp?bill_id=<%= rs.getInt("bill_id") %>"
                               class="btn btn-warning btn-sm mb-1 w-100">Edit</a>

                            <a href="printBillPDF?bill_id=<%= rs.getInt("bill_id") %>"
                               class="btn btn-primary btn-sm w-100">PDF</a>
                        </td>
                    </tr>

                    <% } %>

                    <% if(empty){ %>
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4">
                            No billing records found.
                        </td>
                    </tr>
                    <% } %>

                </tbody>
            </table>

