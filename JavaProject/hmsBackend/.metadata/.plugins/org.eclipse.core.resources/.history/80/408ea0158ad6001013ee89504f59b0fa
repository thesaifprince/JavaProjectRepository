    <!-- Search Bar -->
    <form method="get" action="editBill.jsp" class="input-group mb-4">
        <input type="text" name="search" class="form-control"
               placeholder="Search by Patient Name or Bill ID">
        <button class="btn btn-primary">Search</button>
    </form>

    <%
        String search = request.getParameter("search");
        String billToEdit = request.getParameter("bill_id");

        Class.forName("com.mysql.cj.jdbc.Driver");
        Connection con = DriverManager.getConnection(
            "jdbc:mysql://localhost:3306/hms", "root", "root"
        );
    %>

    <!-- Edit Form If "Edit" clicked -->
    <%
        if(billToEdit != null){
            PreparedStatement ps = con.prepareStatement(
                "SELECT * FROM billing WHERE bill_id = ?"
            );
            ps.setInt(1, Integer.parseInt(billToEdit));
            ResultSet e = ps.executeQuery();

            if(e.next()){
    %>

    <div class="card mb-5">
        <div class="card-header bg-warning">
            <strong>Edit Bill #<%= e.getInt("bill_id") %></strong>
        </div>
        <div class="card-body">

            <form action="updateBill" method="post">

                <input type="hidden" name="bill_id" value="<%= e.getInt("bill_id") %>">

                <div class="mb-3">
                    <label class="form-label">Patient Name</label>
                    <input type="text" name="pname" class="form-control"
                           value="<%= e.getString("patient_name") %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Doctor Name</label>
                    <input type="text" name="dname" class="form-control"
                           value="<%= e.getString("doctor_name") %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Appointment Date</label>
                    <input type="date" name="adate" class="form-control"
                           value="<%= e.getDate("appointment_date") %>" required>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label>Consultation Fee</label>
                        <input type="number" step="0.01" name="cfee" class="form-control"
                               value="<%= e.getDouble("consultation_fee") %>">
                    </div>
                    <div class="col-md-4">
                        <label>Medicine Charges</label>
                        <input type="number" step="0.01" name="mcharge" class="form-control"
                               value="<%= e.getDouble("medicine_charges") %>">
                    </div>
                    <div class="col-md-4">
                        <label>Room Charges</label>
                        <input type="number" step="0.01" name="rcharge" class="form-control"
                               value="<%= e.getDouble("room_charges") %>">
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Update Bill</button>
                <a href="editBill.jsp" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
    </div>

    <%
            }
        }
    %>

    <!-- List of All Bills -->
    <div class="card">
        <div class="card-header bg-dark text-white">All Billing Records</div>
        <div class="card-body">

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Bill ID</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                        PreparedStatement ps2;

                        if(search != null && !search.trim().isEmpty()){
                            ps2 = con.prepareStatement(
                              "SELECT * FROM billing WHERE patient_name LIKE ? OR bill_id LIKE ?"
                            );
                            ps2.setString(1, "%" + search + "%");
                            ps2.setString(2, "%" + search + "%");
                        } else {
                            ps2 = con.prepareStatement("SELECT * FROM billing ORDER BY bill_id DESC");
                        }

                        ResultSet rs = ps2.executeQuery();
                        while(rs.next()){
                    %>

                    <tr>
                        <td><%= rs.getInt("bill_id") %></td>
                        <td><%= rs.getString("patient_name") %></td>
                        <td><%= rs.getString("doctor_name") %></td>
                        <td><%= rs.getDate("appointment_date") %></td>
                        <td><%= rs.getDouble("total_amount") %></td>
                        <td>
                            <a href="editBill.jsp?bill_id=<%= rs.getInt("bill_id") %>"
                               class="btn btn-warning btn-sm">
                                Edit
                            </a>
                        </td>
                    </tr>

                    <% } %>
                </tbody>
            </table>

        </div>
    </div>

</div>

