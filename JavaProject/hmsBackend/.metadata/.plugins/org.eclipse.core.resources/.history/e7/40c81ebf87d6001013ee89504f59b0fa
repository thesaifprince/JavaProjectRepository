        <div class="card-body p-0">

            <table class="table table-bordered table-hover mb-0">
                <thead>
                    <tr>
                        <th>Bill ID</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Date</th>
                        <th>Consultation</th>
